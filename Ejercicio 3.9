Proceso atleta
	
	Escribir "Introduzca los minutos que demoró el atleta en recorrer la ruta el día lunes; ";
	Leer minLunes;
	Escribir "Introduzca los minutos que demoró el atleta en recorrer la ruta el día martes; ";
	Leer minMartes;
	Escribir "Introduzca los minutos que demoró el atleta en recorrer la ruta el día miércoles; ";
	Leer minMiercoles;
	Escribir "Introduzca los minutos que demoró el atleta en recorrer la ruta el día jueves; ";
	Leer minJueves;
	Escribir "Introduzca los minutos que demoró el atleta en recorrer la ruta el día viernes; ";
	Leer minViernes;
	Escribir "Introduzca los minutos que demoró el atleta en recorrer la ruta el día sábado; ";
	Leer minSabado;
	
	promedio <- (minLunes + minMartes + minMiercoles + minJueves + minViernes + minSabado) / 6;
	promedio <- trunc(promedio);
	
	Escribir "El tiempo promedio que se demora en recorrer el atleta en un día cualquiera es de: ", promedio, " minutos.";
	
FinProceso
