Proceso cilindro
	
	Escribir "Escriba el numero del radio: ";
	Leer radio;
	
	Escribir "Escriba el numero de la altura: ";
	Leer altura;
	
	area <- 2 * 3.14 * radio * altura + 2 * 3.14 * (radio * radio);
	volumen <- 3.14 * (radio * radio) * altura;
	
	Escribir "El area del cilindro es: ", area;
	Escribir "El volumen del cilindro es : ", volumen;
	
FinProceso
